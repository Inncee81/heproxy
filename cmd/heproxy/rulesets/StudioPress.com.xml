<!--
	Fully covered subdomains:

		- (www.)
		- my

-->
<ruleset name="StudioPress.com">

	<target host="studiopress.com" />
	<target host="*.studiopress.com" />


	<securecookie host="^my\.studiopress\.com$" name=".+" />


	<rule from="^http://(my\.|www\.)?studiopress\.com/"
		to="https://$1studiopress.com/" />

</ruleset>