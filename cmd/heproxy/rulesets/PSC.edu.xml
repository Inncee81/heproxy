<!--
	Pittsburgh Supercomputing Center


	Fully covered subdomains:

		- (www.)
		- delicate


	Observed cookie domains:

		- ^
		- delicate
		- www

-->
<ruleset name="PSC.edu">

	<target host="psc.edu" />
	<target host="*.psc.edu" />


	<securecookie host="^(?:.+\.)?psc\.edu$" name=".+" />


	<rule from="^http://(delicate\.|www\.)?psc\.edu/"
		to="https://$1psc.edu/" />

</ruleset>