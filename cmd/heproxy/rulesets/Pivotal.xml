<ruleset name="Pivotal">

	<target host="*.run.pivotal.io" />


	<securecookie host="^(?:console|login)\.run\.pivotal\.io$" name=".+" />


	<rule from="^http://(console|login)\.run\.pivotal\.io/"
		to="https://$1.run.pivotal.io/" />

</ruleset>