<!--
	Problematic subdomains:

		- ^	(refused)

-->
<ruleset name="Blue Mountain">

	<target host="bluemountain.com" />
	<target host="*.bluemountain.com" />


	<securecookie host="^\.bluemountain\.com$" name=".+" />


	<rule from="^http://(?:www\.)?bluemountain\.com/"
		to="https://www.bluemountain.com/" />

</ruleset>