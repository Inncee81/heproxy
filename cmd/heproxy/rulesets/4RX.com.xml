<!--
	Problematic subdomains:

		- (www.)	(mismatched, CN: secure.4rx.com)

-->
<ruleset name="4RX.com">

	<target host="4rx.com" />
	<target host="*.4rx.com" />


	<securecookie host="^\.4rx\.com$" name=".+" />


	<rule from="^http://(?:secure\.|www\.)?4rx\.com/"
		to="https://secure.4rx.com/" />

</ruleset>