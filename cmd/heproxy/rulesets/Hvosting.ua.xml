<!--
	Observed cookie domains:

		- ^
		- .
		- www
		- .www

-->
<ruleset name="hvosting.ua">

	<target host="hvosting.ua" />
	<target host="*.hvosting.ua" />


	<securecookie host="^(?:.*\.)?hvosting\.ua$" name=".+" />


	<rule from="^http://(www\.)?hvosting\.ua/"
		to="https://$1hvosting.ua/" />

</ruleset>