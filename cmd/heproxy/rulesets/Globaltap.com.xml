<!--
	Globaltap Hosting


	Fully covered subdomains:

		- (www.)
		- billing

-->
<ruleset name="Globaltap.com">

	<target host="globaltap.com" />
	<target host="*.globaltap.com" />


	<securecookie host="^billing\.globaltap\.com$" name=".+" />


	<rule from="^http://(billing\.|www\.)?globaltap\.com/"
		to="https://$1globaltap.com/" />

</ruleset>