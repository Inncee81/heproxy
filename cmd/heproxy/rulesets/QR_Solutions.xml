<!--
	Fully covered subdomains:

		- (www.)
		- api
		- my

-->
<ruleset name="QR Solutions">

	<target host="qrsolutions.com" />
	<target host="*.qrsolutions.com" />


	<securecookie host="^\.qrsolutions.com$" name=".+" />


	<rule from="^http://((?:api|my|www)\.)?qrsolutions\.com/"
		to="https://$1qrsolutions.com/" />

</ruleset>