<!--
	www: cert only matches ^timeweb.ru

-->
<ruleset name="TimeWeb">

	<target host="timeweb.ru" />
	<target host="*.timeweb.ru" />


	<securecookie host="^(?:.*\.)?timeweb\.ru$" name=".+" />


	<rule from="^http://(?:www\.)?timeweb\.ru/"
		to="https://timeweb.ru/" />

	<rule from="^http://(cp|webmail)\.timeweb\.ru/"
		to="https://$1.timeweb.ru/" />

</ruleset>